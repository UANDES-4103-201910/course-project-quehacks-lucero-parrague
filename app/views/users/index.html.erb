<p id="notice"><%= notice %></p>
<div class = "card border-0 shadow mb-4" style="background-color: white">
<h1>Users</h1>

  <%= form_tag(users_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
    <%= submit_tag "Search" %>
  <% end %>

<table>
  <thead>
    <tr>
      <th>Admin level</th>
      <th>Name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>City</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.admin_level %></td>
        <td><%= user.name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.city %></td>
        <td><%= user.country %></td>
        <td><%= link_to 'Show', user %></td>
        <% if user.id == current_user.id or current_user.admin_level == 1%>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if (user.admin_level == 1 and current_user.admin_level == 2) or user.id == current_user.id%>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin_level == 1 %>
<%= link_to 'New User', new_user_path %>
<% end %>
</div>