<h2>Sign up</h2>
<div class = "card border-0 shadow mb-4" style="background-color: white">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

    <div class="field">
     <%= f.file_field :avatar %>
    </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, autofocus: true, autocomplete: "city" %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country, autofocus: true, autocomplete: "country" %>
  </div>

  <div class="field">
    <%= f.label :i_accept_terms_of_use_and_services %>
    <div>
      <a href="https://www.termsofusegenerator.net/live.php?token=kq8Is7d4YkJzHoViC4rFOJokxVhmFEZO">See Terms of Use</a>
    </div>

    <div>
      <a href="https://www.termsofservicegenerator.net/live.php?token=QhAySmowE7BXyHI7HAOtZ8Hn3DMgOsXw">See Terms of Services</a>
    </div>

    <%= f.check_box :terms %>
  </div>

    <% @all_users = User.last %>
    <% if @all_users != nil %>
      <%= f.hidden_field :admin_level, :value => 0 %>
    <% else %>
      <%= f.hidden_field :admin_level, :value => 1 %>
    <% end %>



  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
