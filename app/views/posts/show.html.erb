<div class = "card border-0 shadow mb-4" style="background-color: white">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="column1">
        <div class="card-body">
          <h3 class="display-4"><%=  @post.title %></h3>
        </div>

        <% if @post.fileName != nil %>
          <%=image_tag post.image.url(:thumb) %>
        <% else %>
          <%=image_tag "hack.jpg", :alt => "default", :size=> "220x150"%>
        <% end %>
        <p> Published: <%= @post.created_at %></p>
    </div>
    <div class="column2">
      <strong>User:</strong>
      <%= @post.user.email %>
      <p></p>
      <strong>City:</strong>
      <%= @post.city %>
      <p></p>
      <strong>Country:</strong>
      <%= @post.country %>
      <p></p>
      <strong>Gps:</strong>
      <%= @post.gps %>
      <p></p>
      <strong>Description:</strong>
      <%= @post.description %>
      <% if current_user != nil %>
        <% if current_user.admin_level != 0 || current_user.id == @post.user.id %>
          <p></p>
          <%= link_to 'Edit', edit_post_path(@post) %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% if current_user != nil %>
  <% if current_user.admin_level != 0 %>
        <strong>Open:</strong>
        <%= @post.open_or_closed %>

        <strong>Solved:</strong>
        <%= @post.solved %>

        <strong>Visible:</strong>
        <%= @post.visible %>

        <strong>Dumpster:</strong>
        <%= @post.dumpster %>
  <% end %>
<% end %>
<div class = "card border-0 shadow mb-4" style="background-color: white">
  <div class="card-body">
    <p class="lead">Comments</p>
    <% if current_user != nil %>
      <%= link_to "Add Comment (placeholder)", new_post_comment_path(post_id: @post.id) %>

    <% end %>
  </div>
</div>
