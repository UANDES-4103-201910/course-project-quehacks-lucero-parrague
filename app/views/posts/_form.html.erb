<% provide :head_tags do %>
  <meta name='turbolinks-visit-control' content='reload'>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAghDygZ30SY12oAZujZAU0t9bAv0xDZEw&callback=initMap2" async defer></script>
  <script>
    document.addEventListener("DOMContentLoaded", initMap2);
  </script>
<% end %>

<div class = "card border-0 shadow mb-4" style="background-color: white">
<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.file_field :picture %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :latitude %>
    <%= form.text_field :latitude %>
  </div>

  <div class="field" >
    <%= form.label :longitude %>
    <%= form.text_field :longitude %>
  </div>

  <p>
    <div id="map2"></div>
  </p>


  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.text_field :country %>
  </div>





  <%= form.hidden_field :user_id, :value => current_user.id %>
  <%= form.hidden_field :public_date, :value => DateAndTime %>
  <%= form.hidden_field :visible, :value => TRUE %>
  <%= form.hidden_field :open_or_closed, :value => TRUE %>
  <%= form.hidden_field :dumpster, :value => FALSE %>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
